<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:itemBackground">@color/blue_grey_800</item>
        <item name="android:tint">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/cyan_700</item>
        <item name="android:fontFamily">@font/news_cycle_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseEditTextTheme">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/blue_grey_400</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:fontFamily">@font/news_cycle_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_grey_100</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="ItemTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="TextStyleSmall" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="AppTheme.Fullscreen.SplashTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- Setting window animation -->
    <style name="AppTheme.WindowTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>
