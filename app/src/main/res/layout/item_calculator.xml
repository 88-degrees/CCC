<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="mustafaozhan.github.com.mycurrencies.extension.TypeExtensionKt" />

        <variable
            name="item"
            type="mustafaozhan.github.com.mycurrencies.model.Currency" />

        <variable
            name="viewEvent"
            type="mustafaozhan.github.com.mycurrencies.ui.main.fragment.calculator.view.CalculatorEvent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/BaseItemLayout"
        android:onClick="@{() -> viewEvent.onItemClick(item)}"
        android:onLongClick="@{() -> viewEvent.onItemLongClick(item)}">

        <TextView
            android:id="@+id/txt_amount"
            style="@style/CalculatorItemAmountTextStyle"
            android:text="@{TypeExtensionKt.replaceNonStandardDigits(TypeExtensionKt.getFormatted(item.rate))}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_symbol"
            style="@style/CalculatorItemSymbolTextStyle"
            android:text="@{item.symbol}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_amount"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_type"
            style="@style/CalculatorItemTypeTextStyle"
            android:text="@{item.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_item"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_item"
            style="@style/CalculatorItemImageViewBase"
            app:backgroundByName="@{item.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>