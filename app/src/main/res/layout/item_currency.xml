<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_light">

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_four"
        android:layout_marginLeft="@dimen/margin_four"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_marginBottom="@dimen/margin_four"
        android:maxLines="1"
        android:paddingStart="@dimen/margin_four"
        android:paddingLeft="@dimen/margin_four"
        android:paddingEnd="@dimen/margin_zero"
        android:paddingRight="@dimen/margin_zero"
        android:textAppearance="@style/ItemTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_four"
        android:layout_marginLeft="@dimen/margin_four"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_marginBottom="@dimen/margin_four"
        android:paddingStart="@dimen/margin_zero"
        android:paddingLeft="@dimen/margin_zero"
        android:paddingEnd="@dimen/margin_four"
        android:paddingRight="@dimen/margin_four"
        android:textAppearance="@style/TextStyleSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_amount"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_marginEnd="@dimen/margin_eight"
        android:layout_marginRight="@dimen/margin_eight"
        android:layout_marginBottom="@dimen/margin_four"
        android:paddingStart="@dimen/margin_zero"
        android:paddingLeft="@dimen/margin_zero"
        android:paddingEnd="@dimen/margin_four"
        android:paddingRight="@dimen/margin_four"
        android:textAppearance="@style/ItemTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_item"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="@dimen/currency_icon_size"
        android:layout_height="@dimen/currency_icon_size"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_marginEnd="@dimen/margin_four"
        android:layout_marginRight="@dimen/margin_four"
        android:layout_marginBottom="@dimen/margin_four"
        android:contentDescription="@string/currency_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
