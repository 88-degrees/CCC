<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_light">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/currencyIconSize"
        android:layout_height="@dimen/currencyIconSize"
        android:layout_marginStart="@dimen/marginFour"
        android:layout_marginLeft="@dimen/marginFour"
        android:layout_marginTop="@dimen/marginFour"
        android:layout_marginBottom="@dimen/marginFour"
        android:contentDescription="@string/currency_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtType"
        android:layout_width="@dimen/fit"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginFour"
        android:layout_marginLeft="@dimen/marginFour"
        android:layout_marginTop="@dimen/marginFour"
        android:layout_marginBottom="@dimen/marginFour"
        android:textAppearance="@style/TextStyleSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/checkBox"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginFour"
        android:layout_marginLeft="@dimen/marginFour"
        android:layout_marginTop="@dimen/marginFour"
        android:layout_marginBottom="@dimen/marginFour"
        android:textAppearance="@style/TextStyleSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtType"
        app:layout_constraintTop_toTopOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginFour"
        android:layout_marginEnd="@dimen/marginZero"
        android:layout_marginRight="@dimen/marginZero"
        android:layout_marginBottom="@dimen/marginFour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>
