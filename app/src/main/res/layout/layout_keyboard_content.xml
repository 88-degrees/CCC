<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true">

    <data>

        <variable
            name="viewEvent"
            type="mustafaozhan.github.com.mycurrencies.ui.main.fragment.calculator.view.CalculatorViewEvent" />
    </data>

    <TableLayout style="@style/MatchStyle">

        <TableRow style="@style/SubKeyboardTableRowStyle">

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/seven)}"
                android:text="@string/seven" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/eight)}"
                android:text="@string/eight" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/nine)}"
                android:text="@string/nine" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/multiply)}"
                android:text="@string/multiply" />
        </TableRow>

        <TableRow style="@style/SubKeyboardTableRowStyle">

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/four)}"
                android:text="@string/four" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/five)}"
                android:text="@string/five" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/six)}"
                android:text="@string/six" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/divide)}"
                android:text="@string/divide" />
        </TableRow>

        <TableRow style="@style/SubKeyboardTableRowStyle">

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/one)}"
                android:text="@string/one" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/two)}"
                android:text="@string/two" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/three)}"
                android:text="@string/three" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/minus)}"
                android:text="@string/minus" />
        </TableRow>

        <TableRow style="@style/SubKeyboardTableRowStyle">

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/dot)}"
                android:text="@string/dot" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/zero)}"
                android:text="@string/zero" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/percent)}"
                android:text="@string/percent" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/plus)}"
                android:text="@string/plus" />
        </TableRow>

        <TableRow style="@style/SubKeyboardTableRowStyle">

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onKeyPressed(@string/triple_zero)}"
                android:text="@string/triple_zero" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onAcPressed()}"
                android:text="@string/ac" />

            <Button
                style="@style/KeyboardTextStyle"
                android:onClick="@{() -> viewEvent.onDelPressed()}"
                android:text="@string/delete" />
        </TableRow>
    </TableLayout>
</layout>